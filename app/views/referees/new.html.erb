<% if flash[:error] %>
    <%= flash[:error] %>
<% end %>

<h1>Create a new Referee Account</h1>
<%= form_for(@ref) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :phone %>
    <%= f.text_field :phone %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.submit %>
<% end %>