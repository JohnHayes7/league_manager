<table>
        <tr>
            <th> Player Name </th>
            <th> Jersey Number </th>
            <% if admin_logged_in? || coach_logged_in? %>
                <th> Phone Number </th>
                <th> Email </th>
                <th></th>
            <% end %>
        </tr>
            
        <% team.players.each do |p| %>
            <% if p.id != nil %>
            <tr>
                <td><%= p.name %></td>
                <td><%= p.jersey_number %></td>
                <% if admin_logged_in? || coach_logged_in? %>
                    <td><%= p.phone_number %></td>
                    <td><%= p.email %></td>
                    <td><%= link_to "edit", edit_team_player_path(p.team_id, p) %></td>
                <% end %>
            </tr>
            <% end %>
        <% end %>
</table>