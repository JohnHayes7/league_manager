<h1>The <%=@comp.season.year %> - <%= @comp.name %> </h1>
<br>
    <% if @comp.matches.empty? %>
        <h3><%= link_to "Create A New Schedule/Matches", new_competition_match_path(@comp) %></h3>
    <% else %>
        
        <% @comp.matches.each do |c| %>
            <div id="match-display"><%= c.date %>  <%= c.time %> -  <br>
                <%= c.teams[0].name %> vs. <%= c.teams[1].name %><br>
                <%= c.location.name %> - <%= c.location_notes %></div><br>
        <% end %>
    <% end %>